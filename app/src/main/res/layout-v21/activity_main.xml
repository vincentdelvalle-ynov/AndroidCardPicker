<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#399839">

    <TextView
        android:id="@+id/discard"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:text="0"
        />

    <TextView
        android:id="@+id/deck"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:text="54"
        android:layout_alignParentRight="true"
        />

    <!-- Vue centrale -->
    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_card">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/card_value_top"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"
                android:textSize="21sp"
                android:text="1"/>
            <ImageView
                android:id="@+id/card_image_top"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:tint="#FF0000"
                android:tintMode="add"
                android:src="@mipmap/ic_heart"/>
        </LinearLayout>

        <!-- partie en bas Ã  gauche de la carte-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/card_image_bottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_clover"
                android:rotation="180"/>
            <TextView
                android:id="@+id/card_value_bottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="21sp"
                android:text="1"
                android:rotation="180"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <!-- Bouton reset -->
        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/rest"/>

        <!-- Bouton nouvelle carte -->
        <Button
            android:id="@+id/draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/draw_card"
            />
    </LinearLayout>


</RelativeLayout>



























